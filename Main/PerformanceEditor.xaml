<Window x:Class="Main.PerformanceEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="PerformanceEditor" Height="450" Width="800">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border
            CornerRadius="3"
            BorderBrush="Gray"
            Background="LightGray"
            Margin="2,2,2,0"
            BorderThickness="1.5">
            <ScrollViewer>
                <StackPanel x:Name="StringsList" Orientation="Vertical" />
            </ScrollViewer>
        </Border>
        <Grid Height="25" Grid.Row="1" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Margin="0,0,5,0" PreviewTextInput="IsAllowedText" x:Name="ItemBox" />
            <Button Width="50" Grid.Column="1" Click="OnAddNewItem">Add</Button>
        </Grid>
    </Grid>
</Window>
